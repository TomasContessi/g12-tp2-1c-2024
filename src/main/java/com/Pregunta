package com;

public class Pregunta {
    
    Respuesta respuestasCorrectas;
    Respuesta respuestasAElejir;
    int puntos = 0;
    public Pregunta(){

    }
    public Pregunta(Respuesta respuestasCorrectas,Respuesta respuestasAElejir){
        this.respuestasCorrectas = respuestasCorrectas;
        this.respuestasAElejir = respuestasAElejir;
    }

     void asignarPuntos(Jugador jugador){
        jugador.asignarPuntos(this.puntos);
     }

    public int calcularPuntosRespuesta(Respuesta respuesta2) {
        puntos = respuesta2.aciertosObtenidos(respuestasCorrectas);
       return puntos;
    }
    void responder(Respuesta respuesta,Jugador jugador) {
        calcularPuntosRespuesta(respuesta);
        asignarPuntos(jugador);
    }
}
